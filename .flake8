[flake8]
# Maximum line length
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    migrations/versions,
    alembic,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

# Ignore specific errors
# E203: whitespace before ':' (conflicts with black)
# E501: line too long (handled by max-line-length)
# W503: line break before binary operator (conflicts with black)
ignore = E203, E501, W503

# Maximum complexity
max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    migrations/*:F401
    tests/*:S101

# Show source code for each error
show-source = True

# Count errors and warnings
statistics = True

